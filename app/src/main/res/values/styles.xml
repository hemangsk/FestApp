<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#311B92</item>
        <item name="colorPrimaryDark">#1A237E</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">#fff</item>
        <item name="android:textColorPrimary">@color/primary_material_light</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
    </style>

    <style name="PagerSlidingTabStripStyle" parent="">
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/black</item>
        <item name="background">@color/colorPrimaryDark</item>
    </style>
</resources>
